<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            // Function to fill in the credentials
            const fillCredentials = (username, password) => {
                document.getElementById('username').value = username;
                document.getElementById('password').value = password;
            };

            // Add event listeners to the demo login buttons
            document.getElementById('demo-user').addEventListener('click', () => {
                fillCredentials('rohit@123gmail.com', 'rohit123');
            });

            document.getElementById('demo-admin').addEventListener('click', () => {
                fillCredentials('admin@gmail.com', 'admin');
            });
        });
    </script>
</head>
<body>
    <section class="login flex justify-center pt-24">
        <div class="w-full max-w-xs">
            <form action="/login" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <% if(messages.error) { %>
                <span class="text-red-500 text-sm"><%= messages.error %></span>
                <% } %>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                        Email
                    </label>
                    <input name="email"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="username" type="email" placeholder="Enter your email">
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <input name="password"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                        id="password" type="password" placeholder="******************">
                </div>
                <div class="flex items-center justify-between mb-4">
                    <button
                        class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                        Log In
                    </button>
                    <a class="inline-block align-baseline font-bold text-sm" href="/register">
                        Don't have account?
                    </a>
                </div>
                <div class="flex items-center justify-between">
                    <button id="demo-user"
                        class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="button">
                        Demo User
                    </button>
                    <button id="demo-admin"
                        class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="button">
                        Demo Admin
                    </button>
                </div>
            </form>
            <p class="text-center text-gray-500 text-xs">
                &copy;2024 Pushpankar Singh. All rights reserved.
            </p>
        </div>
    </section>
</body>
</html>
